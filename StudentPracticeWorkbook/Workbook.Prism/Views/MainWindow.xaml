<Window x:Class="Workbook.Prism.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{x:Static commons:Strings.AppName}" Height="600" Width="800" MinWidth="800" MinHeight="600"
        xmlns:commons="clr-namespace:Workbook.Commons;assembly=Workbook.Commons">

    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Label DockPanel.Dock="Left" Content="{x:Static commons:Strings.AppName}"></Label>
            <ContentControl DockPanel.Dock="Right" prism:RegionManager.RegionName="NavRegion"/>
        </DockPanel>
        
        <ContentControl DockPanel.Dock="Left" prism:RegionManager.RegionName="MenuRegion" />
        <ContentControl DockPanel.Dock="Right" prism:RegionManager.RegionName="ContentRegion" />
        
    </DockPanel>
</Window>
